#Age finder             
<AgeFinderView>:
    name:"age"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .45
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        TitleLabel:
            text:"Age [color=#808080]Finder[/color]"
        Label:
        BoxLayout:
            spacing: 10
            Label1:
                text: "Birth Date"
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:day
                hint_text: "DD"    
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:month
                hint_text: "MM"  
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:year
                hint_text: "YYYY"     
        Label:  
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            Label1:
                text: "Age" 
                color:.5,.5,.5,1  
            Label:
                id:age_res
                text:"" 
                color:[1,0,0,1]           
        BoxLayout:
            orientation:'horizontal'
            spacing:10
            MyButton:
                size_hint:1,.7
                on_release:
                    root.age()
                text:"[b]CALCULATE[/b]"
