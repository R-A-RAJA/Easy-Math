
#Compare 2 Fractions
<CompareFractionView>:
    name:"comp_fraction"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .37
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        TitleLabel:
            text:'Compare [color=#808080]2[/color] Fractions'
        MyGridLayout:
            rows:3
            cols:2
            Label:
            MyTextInput:
                id:a_nume_c
                hint_text:"Numerator"
            Label1:
                text:"1st Fraction"
                color:[1,0,0,1]
            Label:
                text:"______"
            Label:
            MyTextInput:
                id:a_deno_c
                hint_text:"Denominator"
        MyGridLayout:
            rows:3
            cols:2
            Label:
            MyTextInput:
                id:b_nume_c
                hint_text:"Numerator"
            Label1:
                text:"2nd Fraction"
                color:[1,0,0,1]
            Label:
                text:"______"
            Label:
            MyTextInput:
                id:b_deno_c
                hint_text:"Denominator"
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            Label1:
                text:"Result"
                color:.5,.5,.5,1 
            BoxLayout:
            BoxLayout:
                orientation:"vertical"
                Label1:
                    id:res_nume1
                    text:"0"
                    color:[1,0,0,1]
                Label:
                    text:"_______"
                    color:[1,0,0,1]
                Label1:
                    id:res_deno1
                    text:"0"
                    color:[1,0,0,1]
                
            BoxLayout:
                orientation:'vertical'
                Label:
                Label:
                    text:'-'
                    id:comp_res
                    color:[0,0,0,1]
                Label:
                
            BoxLayout:
                orientation:"vertical"
                Label1:
                    id:res_nume2
                    text:"0"
                    color:[1,0,0,1]
                Label:
                    text:"_______"
                    color:[1,0,0,1]
                Label1:
                    id:res_deno2
                    text:"0"
                    color:[1,0,0,1]
                
        MyButton:
            size_hint:1,.7
            text:"[b]COMPARE[/b]"
            on_release:
                root.comp_fra()