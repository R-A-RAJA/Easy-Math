
#percentage 
<PercentageCalculatorView>:
    name:"percentage"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .4
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        TitleLabel:
            text:"Percentage [color=#808080]calculator[/color]"
        BoxLayout:
            spacing: 10
            Label1:
                text: "Mark/Part"
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:i_percent_1
                hint_text: "Part"
        BoxLayout:
            spacing:10
            Label1:
                text: "Out of/Whole" 
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:i_percent_2
                hint_text:"Whole"
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            Label1:
                text: "Percentage(%)" 
                color:.5,.5,.5,1  
            Label:
                id:percent_res
                text:"" 
                color:[1,0,0,1]             
        MyButton:
            size_hint:1,.7
            on_release:
                root.percent()
            text:"[b]Calculate %[/b]"