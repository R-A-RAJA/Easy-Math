

#Simple interest
<SimpleCompoundInterestView>:
    name:"si"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .5
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        TitleLabel:
            text:"SI [color=#808080]&[/color] CI"
            font_size:60
        BoxLayout:
            spacing: 10
            Label1:
                text: "Principal"
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:si_p
                hint_text: "p"
        BoxLayout:
            spacing:10
            Label1:
                text: "Rate" 
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:si_rate
                hint_text:"r"
        BoxLayout:
            spacing:10
            Label1:
                text: "Years" 
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:si_time
                hint_text:"y"
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size
            Label1:
                text: "Result"
                id:si_l
                color:.5,.5,.5,1  
            Label1:
                id:si_res
                text:"" 
                color:[1,0,0,1]  
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size
            Label1:
                text: "Total Value" 
                color:.5,.5,.5,1  
            Label1:
                id:si_res_t
                text:"" 
                color:[1,0,0,1]  
        BoxLayout:
            spacing:20
            MyButton:
                size_hint:1,.7
                on_release:
                    root.si()
                text:"[b]CALCULATE SI[/b]"   
            MyButton:
                size_hint:1,.7
                on_release:
                    root.ci()
                text:"[b]CALCULATE CI[/b]" 
        