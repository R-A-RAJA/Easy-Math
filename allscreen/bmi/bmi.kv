<BMIView>:
    name:"bmi"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .6
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        id:bmiview        
        TitleLabel:
            text:"BMI [color=#808080]Calculator[/color]"
            font_size:70 
        BoxLayout:
            spacing:10
            Label1:
                text: "Weight in .kg"
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:bmi_w
                hint_text: "kg"
        BoxLayout:
            spacing:10
            Label1:
                text: "Height in .cm" 
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:bmi_h
                hint_text:"cm"
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            Label1:
                text: "BMI" 
                color:.5,.5,.5,1  
            Label1:
                id:bmi_res
                text:""
                color:[1,0,0,1]  
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            spacing:10
            Label1:
                text: "Category" 
                color:.5,.5,.5,1
            Label1:
                id:bmi_c
                text:""
                color:[1,0,0,1]                
        MyButton:
            size_hint:1,.7
            on_release:
                root.bmi()
            text:"[b]CALCULATE[/b]"