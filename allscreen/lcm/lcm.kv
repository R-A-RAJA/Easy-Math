
<LCMView>:
    name:"lcm"
    FloatLayout:
        size_hint: 1, .15
        pos_hint: {"center_x": .5, "center_y": .95}
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            RoundedRectangle:
                radius:[0,0,58,58]
                pos: self.pos
                size: self.size
    FloatLayout:
        size_hint: 1, .5
        pos_hint: {"center_x": .5, "center_y": .175}
        canvas.before:
            Color:
                rgba: [.2,.2,.2,.8]
            RoundedRectangle:
                radius:[58,58,0,0]
                pos: self.pos
                size: self.size
    FirstBoxLayout:
        TitleLabel:
            text:"LCM [color=#808080]&[/color] GCD"
            font_size:60
        BoxLayout:
            spacing: 10
            Label1:
                text: "1st Number"
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:i_lcm_1
                hint_text: "1st"        
        BoxLayout:
            spacing:10
            Label1:
                text: "2nd Number" 
            NTextInput:
                size_hint:.9,.7
                font_size: 45
                id:i_lcm_2
                hint_text:"2nd"
        BoxLayout:
            size_hint:1,.7
            canvas.before:
                Color:
                    rgba: [1,1,1,1]
                RoundedRectangle:
                    radius:[58,58,58,58]
                    pos: self.pos
                    size: self.size 
            Label1:
                text: "Result" 
                color:.5,.5,.5,1           
            Label1:
                id:lcm_res
                text:"" 
                color:[1,0,0,1]          
        BoxLayout:
            orientation:'horizontal'
            spacing:20
            padding:5
            MyButton:
                size_hint:1,.7
                on_release:
                    root.lcm()
                text:"[b]CALCULATE LCM[/b]"
            MyButton:
                size_hint:1,.7
                on_release:
                    root.gcd()
                text:"[b]CALCULATE GCD[/b]"